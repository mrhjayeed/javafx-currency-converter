<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.main.converter.HistoryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label alignment="CENTER" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Conversion History" />

    <TableView fx:id="historyTable" prefHeight="300.0">
        <columns>
            <TableColumn fx:id="fromColumn" prefWidth="100.0" sortable="false" text="From" />
            <TableColumn fx:id="toColumn" prefWidth="100.0" sortable="false" text="To" />
            <TableColumn fx:id="amountColumn" prefWidth="150.0" sortable="false" text="Amount" />
            <TableColumn fx:id="resultColumn" prefWidth="150.0" sortable="false" text="Result" />
        </columns>
    </TableView>

    <HBox alignment="CENTER">
        <Button fx:id="backButton" onAction="#onBackButtonClick" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Back to Converter" />
    </HBox>
</VBox>
